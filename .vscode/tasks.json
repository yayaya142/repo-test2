{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "addArgument",
            "type": "promptString",
            "description": "Enter files to add (e.g., .)",
            "default": "."
        },
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Enter the commit message",
            "default": "updated "
        }
    ],
    "tasks": [
        {
            "label": "Update Daniel",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/update_branch.py",
                "daniel"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Update Alpha",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/update_branch.py",
                "alpha"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Update Main",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/update_branch.py",
                "main"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Add Commit Push",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/update_branch.py",
                "add_commit_push",
                "${input:addArgument}",
                "${input:commitMessage}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }        
    ]
}
